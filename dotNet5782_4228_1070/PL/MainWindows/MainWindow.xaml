                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="30*"/>
                </Grid.ColumnDefinitions>

                <Button  x:Name="GoToDroneListWindow" Content="Drone List"       Background="#00000000" BorderBrush="Black" BorderThickness="3" Grid.Row="1" Grid.Column="1"  Click="ButtonClickDrone" Opacity="0.7" RenderTransformOrigin="0.459,2.418" MouseLeave="ChangeBackTheBackGround" MouseMove="ChangeBackGround" />
                <Button  x:Name="GoToStationListWindow" Content="Station List"   Background="#00000000" BorderBrush="Black" BorderThickness="3" Grid.Row="3" Grid.Column="1"  Click="ButtonClickStation" Opacity="0.7" RenderTransformOrigin="0.459,2.418" MouseLeave="ChangeBackTheBackGround" MouseMove="ChangeBackGround"/>
