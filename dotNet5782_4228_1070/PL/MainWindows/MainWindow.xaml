                <Button  x:Name="GoToCustomerListWindow" Content="Customer List" Background="#00000000" BorderBrush="Black" BorderThickness="3" Grid.Row="7" Grid.Column="1"  Click="ButtonClickCustomer" Opacity="0.7" RenderTransformOrigin="0.459,2.418" MouseLeave="ChangeBackTheBackGround" MouseMove="ChangeBackGround"/>
                <Button  x:Name="GoToSignInWindow" Content="Log Out"             Background="#00000000" BorderBrush="Black" BorderThickness="3" Grid.Row="9" Grid.Column="1" Click="ButtonClickLogOut" Opacity="0.7" RenderTransformOrigin="0.459,2.418" MouseLeave="ChangeBackTheBackGround" MouseMove="ChangeBackGround"/>
